# Styles of prompt.
PROMPT="[%n@%m] %# "
RPROMPT="%F{red}[%~]%f"
# PROMPT="[%n@%m] %F{yellow}%B[%~]%b%f %# "

# Shell commands
alias ll="ls -la"

# Python
alias python="python3"

# NeoVim
alias vi="nvim"
alias vim="nvim"
alias view="nvim -R"

# Auto pushd
setopt auto_pushd
setopt pushd_ignore_dups
setopt AUTO_CD
setopt hist_ignore_dups
setopt share_history

